<%= form_for @camera, :html => { :class => 'form-horizontal pure-form pure-form-aligned' } do |f| %>
  <div class="pure-control-group">
    <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'text_field' %>
  </div>
  <div class="pure-control-group">
    <%= f.label :host_uri, :class => 'control-label' %>
      <%= f.text_field :host_uri, :class => 'text_field' %>
  </div>
  <div class="pure-control-group">
    <%= f.label :capture_path, :class => 'control-label' %>
      <%= f.text_field :capture_path, :class => 'text_field' %>
  </div>
  <div class="pure-control-group">
    <%= f.label :username, :class => 'control-label' %>
      <%= f.text_field :username, :class => 'text_field' %>
  </div>
  <div class="pure-control-group">
    <%= f.label :password, :class => 'control-label' %>
      <%= f.text_field :password, :class => 'text_field' %>
  </div>

  <div class="pure-controls">
    <%= f.submit nil, :class => 'btn btn-primary pure-button pure-button-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cameras_path, :class => 'btn' %>
  </div>
<% end %>
