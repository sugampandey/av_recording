<%- model_class = Capture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="pure-table pure-table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:time_zone) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:camera_name) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @captures.each do |capture| %>
      <tr>
        <td><%= link_to capture.id, capture_path(capture) %></td>
        <td><%= capture.time_zone %></td>
        <td><%= capture.start_time %></td>
        <td><%= capture.end_time %></td>
        <td><%= capture.camera.name %></td>
        <td><%= capture.state %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_capture_path(capture), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      capture_path(capture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_capture_path,
            :class => 'btn btn-primary pure-button pure-button-primary' %>
</p>
