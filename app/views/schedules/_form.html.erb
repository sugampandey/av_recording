<%= form_for @schedule, :html => { :class => 'form-horizontal pure-form pure-form-aligned' } do |f| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="pure-control-group">
    <%= f.label :wday, :class => 'control-label' %>
    <%= f.select :wday, Date::DAYNAMES.zip((0..6).to_a) %>
  </div>
  <div class="pure-control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <%= f.text_field :start_time, :value => @schedule.start_time.nil? ? nil : @schedule.start_time.strftime("%H:%M"), :class => 'text_field timepicker' %>
  </div>
  <div class="pure-control-group">
    <%= f.label :end_time, :class => 'control-label' %>
    <%= f.text_field :end_time, :value => @schedule.end_time.nil? ? nil : @schedule.end_time.strftime("%H:%M"), :class => 'text_field timepicker' %>
  </div>
  <div class="pure-control-group">
    <%= f.label :enabled, :class => 'control-label' %>
    <%= f.check_box :enabled %>
  </div>

  <div class="pure-control-group">
    <%= label_tag :cameras, nil, :class => 'control-label' %>
  <div style="margin-left: 160px;">
      <% for camera in Camera.all %>
      <div class="event-categories l w_45 txt_left">
        <%= check_box_tag "schedule[camera_ids][]", camera.id, @schedule.cameras.include?(camera) %>
        <%= camera.name %>
      </div>
    <% end %>
  </div>
  
  </div>

  <div class="pure-controls">
    <%= f.submit nil, :class => 'btn btn-primary pure-button pure-button-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schedules_path, :class => 'btn' %>
  </div>
<% end %>

<%= content_for :js do %>
<script type="text/javascript">
  $(function(){
    $('.timepicker').timepicker();
  });
</script>
<% end %>
